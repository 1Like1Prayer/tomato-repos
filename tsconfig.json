{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
